{
    "name": "TestFilteredAPI",
    "version": "1.0.0",
    "path": "filtered/",
    "group": [
        {
            "id": "Group1",
            "description": "Endpoints Group One",
            "member": [
                {
                    "path": ["get/", "/user-agent"],
                    "method": ["GET"]
                },
                {
                    "path": ["headers/"] 
                }
            ] 
        },
        {
            "id": "Group2",
            "description": "Endpoints Group Two",
            "member": [
                {
                    "method": ["POST"]
                }
            ] 
        }
    ],
    "proxy": {
        "target": {
            "host": "http://httpbin.org"
        },
        "timeout": 5000
    },
    "filter": [
        {
            "use": "my-ip-filter",
            "group": ["Group2"]
        },
        {
            "middleware": {
                "name": "myCustomFilter"
            },
            "group": ["Group1"]
        },
        {
            "middleware": {
                "name": "mySecondFilter"
            },
            "group": ["Group1"]
        }
    ]    
}