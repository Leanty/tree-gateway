{
    "name": "TestLocalAuthenticatedAPI",
    "version": "1.0.0",
    "path": "secureLocal/",
    "proxy": {
        "target": {
            "host": "http://httpbin.org"
        },
        "timeout": 5000
    },
    "authentication": {
        "strategy": {
            "name": "local", 
            "options": {
                "usernameField": "userid",
                "passwordField": "passwd",
                "verify": {
                    "name": "verifyBasicUser"
                }
            }
        }
    }
}