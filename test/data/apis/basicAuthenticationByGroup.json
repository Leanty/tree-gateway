{
    "name": "TestAuthdByGroupAPI",
    "version": "1.0.0",
    "path": "secureBasic-by-group/",
    "group": [
        {
            "id": "Group1",
            "description": "Endpoints Group One",
            "member": [
                {
                    "path": ["get/", "/user-agent/**"],
                    "method": ["GET"],
                    "protocol": ["http"]
                }
            ] 
        }
    ],
    "proxy": {
        "target": {
            "host": "http://httpbin.org"
        },
        "timeout": 5000
    },
    "authentication": {
        "strategy": {
            "id": "basic",
            "options": {
                "verify": {
                    "name": "verifyBasicUser"
                }
            }
        },
        "group": ["Group1"]        
    },
    "errorHandler": {
        "name": "json",
        "options": {
            "expression": "{'Err': error.message}"
        }
    }
}