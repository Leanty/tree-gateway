{
    "name": "TestAuthenticatedAPI",
    "version": "1.0.0",
    "path": "secure/",
    "proxy": {
        "target": {
            "host": "http://localhost:7000"
        },
        "timeout": "fifteen seconds"
    },
    "parseCookies": true,
    "authentication": {
        "strategy": {
            "name": "jwt",
            "options": {
                "extractFrom": {
                    "authHeader": "Bearer",
                    "queryParam": "jwt",
                    "header": "x-my-token",
                    "bodyField": "token",
                    "cookie": "my-cookie"
                },
                "secretOrKey": "secret",
                "algorithms": ["HS256", "HS384"],
                "ignoreExpiration": true,
                "verify": {
                    "name": "verifyJwtUser"
                }
            }
        } 
    },
    "errorHandler": {
        "middleware": {
            "name": "mustache",
            "options": {
                "template": "<html><head></head><body>Error: {{error.message}}</body></html>",
                "contentType": "text/html"
            }
        }
    }
}